@model TeamViewModel;
@{
    ViewData["Title"] = "Add Team";
}

<div class="text-center">
    <h1 class="item-title">@ViewData["Title"]</h1>
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="validationTooltip01" placeholder="National , Levski , Juventus ....">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Logo"></label>
        <input asp-for="Logo" class="form-control" id="validationTooltip01" placeholder="www.national.com/logo...">
        <span asp-validation-for="Logo" class="small text-danger"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Save" />
</form>
