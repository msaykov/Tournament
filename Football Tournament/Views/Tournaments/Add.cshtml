@model AddTournamentViewModel;
@{
    ViewData["Title"] = "Add Tournament";
}

<div class="text-center">
    <h1 class="item-title">@ViewData["Title"]</h1>
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="validationTooltip01" placeholder="Sofia Cup ....">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" id="validationTooltip01" placeholder="U8 , U15 ....">
        <span asp-validation-for="Category" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxTeams"></label>
        <input asp-for="MaxTeams" class="form-control" id="validationTooltip01" placeholder="U8 , U15 ....">
        <span asp-validation-for="MaxTeams" class="small text-danger"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Save" />
</form>
